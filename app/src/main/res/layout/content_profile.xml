<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:rotation="0"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.weclub.srmweclubapp.Profile"
    tools:showIn="@layout/app_bar_profile">

    <RelativeLayout
        android:layout_width="335dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/virtualcard"
        android:rotation="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/holderName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="26dp"
            android:layout_marginStart="18dp"
            android:text="TextView"



            android:fontFamily="@font/montserrat_bold"

            android:textColor="@android:color/white"

            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UID"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/holderName"
            android:layout_alignStart="@+id/holderName"
            android:text="TextView"



            android:fontFamily="@font/montserrat_bold"

            android:textColor="@android:color/white"

            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/QRCode2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_above="@+id/UID"
            android:layout_toEndOf="@+id/holderName"
            android:src="@color/cardview_light_background" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
